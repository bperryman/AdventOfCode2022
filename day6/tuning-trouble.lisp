(defun character-appears-after-position-p (str c pos)
  (let ((start (1+ pos)))
    (and (<= start (length str)) (position c str :start (1+ pos)))))

(defun string-contains-duplicate-p (str)
  (loop for i = 0 then (1+ i)
        for c across str
        when (character-appears-after-position-p str c i)
          return t
        finally (return nil)))

(defun start-of-message-block (string &key (marker-length 4))
  (loop for i = 0 then (1+ i)
        for c across string
        unless (string-contains-duplicate-p (make-array marker-length
                                                        :displaced-to string
                                                        :displaced-index-offset i
                                                        :element-type 'character))
          return (+ marker-length i)))

(defparameter *message* "")


(format t "Part 1 start of message ~a~%" (start-of-message-block *message*))
(format t "Part 2 start of message ~a~%" (start-of-message-block *message* :marker-length 14))
